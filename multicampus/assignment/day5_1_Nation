package Assginments;

public class Main {

	public static void main(String[] args) {
	
		India india = new India();
		india.food_choice();
		
		Korea korea = new Korea();
		korea.increase();
		korea.increase();
		korea.increase();
		
		Singapore singapore = new Singapore();
		singapore.rank();
		
	}
	
}

class Nation {
	
	private String country;
	public int area;
	public int population;
	static String plant = "Mars";
	
	void ctry_change() {};
	void a_change() {};
	void p_change() {};
	
}

class India extends Nation {
	
	int choice[] = {1,2,3};
	int selection = choice[1];
	
	void food_choice() {
		
		if(selection==1) {
			System.out.println("탄두리 치킨을 선택하셨습니다");
		}
		if(selection==2) {
			System.out.println("커리를 선택하셨습니다");
		}
		if(selection==3) {
			System.out.println("Naan을 선택하셨습니다");
		}
		
	}
	

}
class Korea extends Nation {
	
	int fan = 0;
	
	void increase() {
		fan = fan + 5;
		System.out.println("K-culture의 팬이 "+ fan + "명 늘었습니다.");
	}
}
class Singapore extends Nation {
	
	int vote[] = {1000, 735, 231};

	void rank() {

		int max = vote[0];
		
		for(int i=1; i<vote.length;i++) {
			if(vote[i] > max) {
				max = vote[i];
			}
		}
		
		System.out.println("마리나베이샌즈가 "+ max + "표로 가장 인기있는 명소로 투표되었습니다.");
				
	}
}

